generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum MediaStatus {
    PENDING
    PROCESSING
    COMPLETED
    FAILED
}

model Media {
    id           String   @id @default(uuid())
    originalName String
    filename     String
    status       MediaStatus   @default(PENDING)
    mimetype     String
    size         Int
    originalKey  String
    optimizedKey String?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
}
